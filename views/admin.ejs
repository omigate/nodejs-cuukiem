<!DOCTYPE html>
<html lang="en">
<head>
  <title>Quản trị cửu kiếm</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/assets/css/main.css">
	<link rel="stylesheet" href="/assets/css/theme.css">
  
</head>
<body>
  
<div class="container">
  <form action="/logout?_method=DELETE" method="POST">
    <!-- <button type="submit">Log Out</button> -->
  </form>
  <h3 class="head-admin text-center">Cửu kiếm chi vương</h3>
 
  <div class="panel with-nav-tabs panel-default">
    <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab1default" data-toggle="tab">Sự kiện</a></li>
                <li><a href="#tab2default" data-toggle="tab">Bang phai</a></li>
                <li><a href="#tab3default" data-toggle="tab">Cẩm nang</a></li>
                <li><a href="#tab4default" data-toggle="tab">Tin tức mới nhất</a></li>
                <li><a href="#tab5default" data-toggle="tab">Tải hình ảnh lên</a></li>

            </ul>
    </div>
    
    
    <div class="panel-body">
       
        <div class="tab-content">
            <div class="tab-pane fade in active" id="tab1default">
              <a style=" background: #3c88ca;padding: 10px;line-height: 57px;color: #fff;" href="/add">THÊM MỚI</a></td>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Tiêu đề</th>
                    <th>Mô tả</th>
                    <th>Hình ảnh</th>
                    <th>Nội dung</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.dataEvent.rows.forEach(function(item){ %>
                  <tr>
                    <td><%= item.id %></td>
                    <td><%= item.tieude %></td>
                    <td><%= item.mota %></td>
                    <td><img width="200px" src="/uploads/<%= item.image %>"></td>
                    <td><%- item.noidung %></td>
                    <td>
                      <a onclick="return confirm('bạn muốn xóa')" href="/delete/<%= item.id %>">Xóa</a>
                      <!-- <a href="/edit/<%= item.id %>">edit</a> -->
                      </td> 
                  </tr>

                  <%})%>
                </tbody>
                
              </table>
            </div>
            <div class="tab-pane fade" id="tab2default">
              <a style=" background: #3c88ca;padding: 10px;line-height: 57px;color: #fff;" href="/addbang">THÊM MỚI</a>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Tiêu đề</th>
                    <th>Nội dung</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.dataBangPhai.rows.forEach(function(item){ %>
                  <tr>
                    <td><%= item.id %></td>
                    <td><%= item.tieude %></td>
                    
                    <td><%- item.noidung %></td>
                    <td>
                    <a onclick="return confirm('bạn muốn xóa')" href="/delete1/<%= item.id %>">Xóa</a>--
                  </td> 
                     
                  </tr>
                  <%})%>
                </tbody>
              </table>
            </div>
            <div class="tab-pane fade " id="tab3default">
              <a style=" background: #3c88ca;padding: 10px;line-height: 57px;color: #fff;" href="/addcamnang">THÊM MỚI</a>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Tiêu đề</th>
                    <th>Mô tả</th>
                    <th>Hình ảnh</th>
                    <th>Nội dung</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.dataCamNang.rows.forEach(function(item){ %>
                    <tr>
                    <td><%= item.id %></td>
                    <td><%= item.tieude %></td>
                    <td><%= item.mota %></td>
                    <td><img width="200px" src="/uploads/<%= item.image %>"></td>
                    <td><%- item.noidung %></td>
                    <td>
                      <a onclick="return confirm('bạn muốn xóa')" href="/delete2/<%= item.id %>">Xóa</a>
                      <!-- <a href="/edit/<%= item.id %>">edit</a> -->
                      </td> 
                  </tr>

                  <%})%>
                </tbody>
                
              </table>
            </div>
            <div class="tab-pane fade " id="tab4default">
              <a style=" background: #3c88ca;padding: 10px;line-height: 57px;color: #fff;" href="/addnews">THÊM MỚI</a>

              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Tiêu đề</th>
                   
                    <th>Nội dung</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.dataNews.rows.forEach(function(item){ %>
                    <tr>
                    <td><%= item.id %></td>
                    <td><%= item.tieude %></td>
                   
                    <td><%- item.noidung %></td>
                    <td>
                      <a onclick="return confirm('bạn muốn xóa')" href="/delete3/<%= item.id %>">Xóa</a>
                      <!-- <a href="/edit/<%= item.id %>">edit</a> -->
                     </td> 
                  </tr>

                  <%})%>
                </tbody>
                
              </table>
            </div>
            <div class="tab-pane fade  " id="tab5default">
              <a style=" background: #3c88ca;padding: 10px;line-height: 57px;color: #fff;" href="/addimage">THÊM MỚI</a>

              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                  
                    <th>Hình ảnh</th>
                   
                  </tr>
                </thead>
                <tbody>
                  <% data.dataHinhAnh.rows.forEach(function(item){ %>
                    <tr>
                      <td><%= item.id %></td>
                    <td><img width="200px" src="/uploads/<%= item.hinhanh %>"></td>
                   
                    <td>
                      <!-- <a onclick="return confirm('bạn muốn xóa')" href="/delete/<%= item.id %>">Xóa</a> -->
                      <!-- <a href="/edit/<%= item.id %>">edit</a> -->
                      </td> 
                  </tr>

                  <%})%>
                </tbody>
                
              </table>
            </div>
            

        </div>
    </div>
</div>


</div>

</body>
</html>
